@model LoginViewModel
<form asp-controller ="Auth" asp-action="Login" >
<div class="text-danger" asp-validation-summary="All"></div>
    <h1 class="text-center">ورود به حساب</h1>
    <label>نام کاربری : </label>
    <input asp-for="UserName" type="text" class="form-control" />
    <label>کلمه عبور : </label>
    <input asp-for="Password" type="password" class="form-control" />
    <button class="btn btn-success mt-4 float-end" style="margin-right: 8px;">ورود به حساب</button>
    <button type="button" id="register-btn" class="btn btn-primary mt-4">ثبت نام</button>
</form>